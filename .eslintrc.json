{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:unicorn/recommended",
    "plugin:prettier/recommended"
  ],
  "overrides": [
  ],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
  },
  "globals": {
      "canvas": true,
      "ui": true,
      "foundry": true,
      "MouseInteractionManager": true,
      "Hooks": true,
      "FormApplication": true,
      "ChatMessage": true,
      "$": true,
      "game": true,
      "Draggable": true,
      "SceneWeather": true,
      "Macro": true,
      "Application": true,
      "Handlebars": true,
      "PIXI": true,
      "CanvasAnimation": true,
      "randomID": true,
      "renderTemplate": true,
      "CONFIG": true,
      "Dialog": true,
      "loadTemplates": true,
      "SimpleCalendar": true,
      "InteractionLayer": true,
      "CONST": true,
      "getType": true
  },
  "rules": {
      "indent": [
          "error",
          2
      ],
      "linebreak-style": [
          "error",
          "unix"
      ],
      "quotes": [
          "error",
          "single"
      ],
      "semi": [
          "error",
          "never"
      ]
  }
}
