<form autocomplete="off" onsubmit="event.preventDefault();">
  <p class="notes">{{localize 'dialogs.permissionConfig.hint'}}</p>

  <header class="table-header flexrow">
    <label class="index">{{localize 'dialogs.permissionConfig.right'}}</label>
    {{#each headline}}
    <label data-userid="{{this.id}}">{{#if (eq this.type 'role')}}<i class="fa-solid fa-users"></i>{{/if}}{{#if (eq
      this.type 'user')}}<i class="fa-solid fa-user" style="color: {{this.color}}"></i>{{/if}} {{this.name}}</label>
    {{/each}}
  </header>

  <ul class="permissions-list">
    {{#each matrix}}
    <li class="permission form-group">
      <label class="index" data-permissionId="{{this.permissionId}}">{{this.permissionName}}</label>
      <div class="form-fields">
        {{#each this.users}}
        <input type="checkbox" data-userid="{{this.id}}" name="{{this.checkId}}" {{#if this.check}}checked{{/if}}>
        {{/each}}
      </div>
      <p class="hint">{{this.permissionHint}}</p>
    </li>
    {{/each}}
  </ul>

  <div class="form-group">
    <button type="submit">
      <i class="fas fa-save"></i> {{localize 'dialogs.permissionConfig.save'}}
    </button>

    <button type="reset" name="reset">
      <i class="fas fa-sync"></i> {{localize 'dialogs.permissionConfig.defaults'}}
    </button>
  </div>
</form>