        placeholder="{{summer.humidity.avg}}" value="{{summer.humidity.avg}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.humidity.min">Minimum Humidity in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{summer.humidity.min}}">
