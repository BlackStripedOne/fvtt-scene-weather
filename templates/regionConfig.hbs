<form class="flexcol">
  <p>Configure the regions specific climate parameters.</p>

  <h1>General Environment</h1>
  <div class="form-group">
    <label for="elevation">Average Elevation (meter aMSL)</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="3000" step="100" value="{{elevation}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="elevation"
        placeholder="{{elevation}}" value="{{elevation}}">
    </div>
  </div>

  <div class="form-group">
    <label for="vegetation">Average Vegetation amount (%)</label>
    <p><i>(100% deep rainforest jungle / 0% arid ice-, deser-, wasteland/ocean, rocky mountaintop)</i></p>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{vegetation}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="vegetation"
        placeholder="{{vegetation}}" value="{{vegetation}}">
    </div>
  </div>

  <div class="form-group">
    <label for="waterAmount">Waterbodies</label>
    <div class="form-fields">
      <select name="waterAmount" data-dtype="Number">
        {{selectOptions waterAmounts selected=waterAmount nameAttr="id" labelAttr="name" localize=true}}
      </select>
    </div>
  </div>

  <h1>Summer</h1>
  <h2>Temperatrue</h2>
  <p>Temperature in degrees celsius</p>
  <div class="form-group">
    <label for="summer.temperature.day">Daytime Temperature in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="-50" max="70" step="1" value="{{summer.temperature.day}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.day"
        placeholder="{{summer.temperature.day}}" value="{{summer.temperature.day}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.temperature.night">Nighttime Temperature in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="-50" max="70" step="1" value="{{summer.temperature.night}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.night"
        placeholder="{{summer.temperature.night}}" value="{{summer.temperature.night}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.temperature.var">Variation Amount</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="20" step="1" value="{{summer.temperature.var}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.var"
        placeholder="{{summer.temperature.var}}" value="{{summer.temperature.var}}">
    </div>
  </div>

  <h2>Humidity</h2>
  <p>Relative Humidity in %</p>
  <div class="form-group">
    <label for="summer.humidity.day">Daytime Humidity in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{summer.humidity.day}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.humidity.day"
        placeholder="{{summer.humidity.day}}" value="{{summer.humidity.day}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.humidity.night">Nighttime Humidity in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{summer.humidity.night}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.humidity.night"
        placeholder="{{summer.humidity.night}}" value="{{summer.humidity.night}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.humidity.var">Variation Amount</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="50" step="1" value="{{summer.humidity.var}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.humidity.var"
        placeholder="{{summer.humidity.var}}" value="{{summer.humidity.var}}">
    </div>
  </div>

  <h2>Windspeed</h2>
  <p>Windspeed in m/s.</p>
  <div class="form-group">
    <label for="summer.wind.avg">Average Windspeed in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="70" step="1" value="{{summer.wind.avg}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.wind.avg"
        placeholder="{{summer.wind.avg}}" value="{{summer.wind.avg}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.wind.var">Variation Amount</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="50" step="1" value="{{summer.wind.var}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.wind.var"
        placeholder="{{summer.wind.var}}" value="{{summer.wind.var}}">
    </div>
  </div>

  <h2>Sun</h2>
  <p>Sunshine hours</p>
  <div class="form-group">
    <label for="summer.sun.hours">Average hours of sunshine</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="70" step="1" value="{{summer.sun.hours}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.sun.hours"
        placeholder="{{summer.sun.hours}}" value="{{summer.sun.hours}}">
    </div>
  </div>

