<form class="flexcol">
  <p>Configure the regions specific climate parameters.</p>

  <h1>General Environment</h1>
  <div class="form-group">
    <label for="elevation">Average Elevation (meter aMSL)</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="3000" step="100" value="{{elevation}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="elevation"
        placeholder="{{elevation}}" value="{{elevation}}">
    </div>
  </div>

  <div class="form-group">
    <label for="vegetation">Average Vegetation amount (%)</label>
    <p><i>(100% deep rainforest jungle / 0% arid ice-, deser-, wasteland/ocean, rocky mountaintop)</i></p>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{vegetation}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="vegetation"
        placeholder="{{vegetation}}" value="{{vegetation}}">
    </div>
  </div>

  <div class="form-group">
    <label for="waterAmount">Waterbodies</label>
    <div class="form-fields">
      <select name="waterAmount" data-dtype="Number">
        {{selectOptions waterAmounts selected=waterAmount nameAttr="id" labelAttr="name" localize=true}}
      </select>
    </div>
  </div>

  <h1>Summer</h1>
  <h2>Temperatrue</h2>
  <p>Temperature in degrees celsius</p>
  <div class="form-group">
    <label for="summer.temperature.max">Maximum Temperature in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="-50" max="70" step="1" value="{{summer.temperature.max}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.max"
        placeholder="{{summer.temperature.max}}" value="{{summer.temperature.max}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.temperature.avg">Average Temperature in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="-50" max="70" step="1" value="{{summer.temperature.avg}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.avg"
        placeholder="{{summer.temperature.avg}}" value="{{summer.temperature.avg}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.temperature.min">Minimum Temperature in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="-50" max="70" step="1" value="{{summer.temperature.min}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.min"
        placeholder="{{summer.temperature.min}}" value="{{summer.temperature.min}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.temperature.var">Variation Amount</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="20" step="1" value="{{summer.temperature.var}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.temperature.var"
        placeholder="{{summer.temperature.var}}" value="{{summer.temperature.var}}">
    </div>
  </div>

  <h2>Humidity</h2>
  <p>Relative Humidity in %</p>
  <div class="form-group">
    <label for="summer.humidity.max">Maximum Humidity in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{summer.humidity.max}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.humidity.max"
        placeholder="{{summer.humidity.max}}" value="{{summer.humidity.max}}">
    </div>
  </div>
  <div class="form-group">
    <label for="summer.humidity.avg">Average Humidity in Summer</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="100" step="1" value="{{summer.humidity.avg}}">
