  <div class="form-group">
    <label for="summer.humidity.var">Variation Amount</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="50" step="1" value="{{summer.humidity.var}}">
      <input type="number" data-dtype="Number" class="range-value" style="flex: 0 1 48px;" name="summer.humidity.var"
        placeholder="{{summer.humidity.var}}" value="{{summer.humidity.var}}">
    </div>
  </div>

