<fieldset class="sceneWeather-fieldSet">
  <legend><i class="fas fa-solid fa-temperature-sun"></i> {{localize 'dialogs.regionConfig.temperature.title'}}</legend>
  <div class="form-group">
    <div class="sceneweather-slider" data-min="summer.temperature.night" data-max="summer.temperature.day"
      data-range="-30,50" data-unit="Â°C"></div>
    <input type="number" data-dtype="Number" name="summer.temperature.day" value="{{summer.temperature.day}}"
      style="display:none;">
    <input type="number" data-dtype="Number" name="summer.temperature.night" value="{{summer.temperature.night}}"
      style="display:none;">
  </div>
  <div class="form-group">
    <label for="summer.temperature.var">{{localize 'dialogs.regionConfig.temperature.varlabel'}}</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="20" step="1" value="{{summer.temperature.var}}">
      <input type="number" data-dtype="Number" class="range-value unit small" name="summer.temperature.var"
        placeholder="{{summer.temperature.var}}" value="{{summer.temperature.var}}"><span>{{localize
        'dialogs.degCelsius'}}</span>
    </div>
  </div>
  <p class="hint">{{localize 'dialogs.regionConfig.temperature.hint'}}</p>
</fieldset>

