<fieldset class="sceneWeather-fieldSet">
  <legend><i class="fas fa-solid fa-temperature-snow"></i> {{localize 'dialogs.regionConfig.temperature.title'}}
  </legend>
  <div class="form-group">
    <div class="sceneweather-slider" data-min="winter.temperature.night" data-max="winter.temperature.day"
      data-range="{{const.tmin}},{{const.tmax}}" data-unit="Â°C"></div>
    <input type="number" data-dtype="Number" name="winter.temperature.day" value="{{winter.temperature.day}}"
      style="display:none;">
    <input type="number" data-dtype="Number" name="winter.temperature.night" value="{{winter.temperature.night}}"
      style="display:none;">
  </div>
  <div class="form-group">
    <label for="winter.temperature.var">{{localize 'dialogs.regionConfig.temperature.varlabel'}}</label>
    <div class="form-fields">
      <input type="range" data-dtype="Number" min="0" max="20" step="1" value="{{winter.temperature.var}}">
      <input type="number" data-dtype="Number" class="range-value unit small" name="winter.temperature.var"
        placeholder="{{winter.temperature.var}}" value="{{winter.temperature.var}}"><span>{{localize
        'dialogs.degCelsius'}}</span>
    </div>
  </div>
  <p class="hint">{{localize 'dialogs.regionConfig.temperature.hint'}}</p>
</fieldset>

